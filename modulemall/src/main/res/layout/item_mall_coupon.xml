<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">


    <com.wei.android.lib.colorview.view.ColorRelativeLayout
        style="@style/hh_fi_wr"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:orientation="horizontal"
        app:backgroundColorNormal="@color/white"
        app:borderColorNormal="#DB6634"
        app:borderWidthNormal="@dimen/dp_1"
        app:cornerRadiusNormal="@dimen/dp_10">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="110dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_coupon_text"
                style="@style/text_black_14_w_w"
                android:layout_marginTop="8dp"
                android:text="平台优惠券"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_coupon_time"
                style="@style/text_black_14_w_w"
                android:layout_marginTop="@dimen/dp_15"
                android:text="有效期至 2020-05-30 23:59:59"
                android:textColor="#646464"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_coupon_have_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/mall_coupon_have_used"
                android:visibility="gone" />


            <com.wei.android.lib.colorview.view.ColorButton
                android:id="@+id/bt_coupon_have_get"
                style="@style/text_white_12_w_w"
                android:layout_width="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="已领取"
                android:textColor="#E96735"
                android:visibility="visible"
                app:backgroundColorNormal="#F4F0E2"
                app:cornerRadiusNormal="180dp" />


            <com.wei.android.lib.colorview.view.ColorButton
                android:id="@+id/bt_coupon_to_get"
                style="@style/text_white_12_w_w"
                android:layout_width="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:text="领取"
                android:visibility="gone"
                app:backgroundColorNormal="#DB6634"
                app:cornerRadiusNormal="180dp" />

        </LinearLayout>


    </com.wei.android.lib.colorview.view.ColorRelativeLayout>


    <com.kproduce.roundcorners.RoundLinearLayout
        android:layout_width="82dp"
        android:layout_height="86dp"
        android:layout_marginLeft="24dp"
        android:background="#DB6634"
        android:orientation="vertical"
        app:rTopLeftRadius="@dimen/dp_10"
        app:rTopRightRadius="@dimen/dp_10">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                style="@style/text_black_14_w_w"
                android:layout_gravity="bottom"
                android:layout_marginBottom="4dp"
                android:text="￥"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_coupon_value"
                style="@style/text_black_14_w_w"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_coupon_desc"
            style="@style/text_black_14_w_w"
            android:layout_gravity="center"
            android:text="满50可用"
            android:textColor="@color/white" />
    </com.kproduce.roundcorners.RoundLinearLayout>
</FrameLayout>