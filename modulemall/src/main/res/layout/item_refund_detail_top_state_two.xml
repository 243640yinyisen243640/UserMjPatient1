<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">


    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="4dp">

        <TextView
            android:id="@+id/tv_state_text"
            style="@style/text_black_14_w_w"
            android:text="请等待卖家处理"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_state_time"
            style="@style/text_gray_14_w_w"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2020-05-19 12:32"
            android:textSize="13sp" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:backgroundColorNormal="@color/main_red"
                    app:cornerRadiusNormal="@dimen/dp_10" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="如果卖家收货，退款成功并退款到您的账户余额中"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:backgroundColorNormal="@color/main_red"
                    app:cornerRadiusNormal="@dimen/dp_10" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="如果商家拒绝，将需要您修改退款申请"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:backgroundColorNormal="@color/main_red"
                    android:layout_marginTop="6dp"
                    app:cornerRadiusNormal="@dimen/dp_10" />

                <TextView
                    android:id="@+id/tv_count_down_time"
                    style="@style/text_black_14_w_w"
                    android:layout_height="35dp"
                    android:text="如果9天23时59分37秒内卖家未处理，退款申请将自动达成并退款到您的账户余额中"
                    android:textSize="11sp" />


            </LinearLayout>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    app:backgroundColorNormal="@color/main_red"
                    app:cornerRadiusNormal="@dimen/dp_10" />

                <TextView
                    android:id="@+id/tv_logistic"
                    style="@style/text_black_14_w_w"
                    android:text="您已退货 物流公司：顺丰 运单号：665541252"
                    android:textSize="11sp" />


            </LinearLayout>


        </LinearLayout>


    </com.wei.android.lib.colorview.view.ColorLinearLayout>


</LinearLayout>