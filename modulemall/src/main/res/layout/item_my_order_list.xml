<?xml version="1.0" encoding="utf-8"?>
<com.wei.android.lib.colorview.view.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    app:backgroundColorNormal="@color/white"
    app:cornerRadiusNormal="@dimen/dp_4">


    <TextView
        android:id="@+id/tv_desc"
        style="@style/text_black_12_w_w"
        android:layout_gravity="right"
        android:text="退款成功"
        android:textColor="#FF4700" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="2"
        tools:listitem="@layout/item_my_order_list_product_list">

    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/tv_total_price"
        style="@style/text_black_14_w_w"
        android:layout_gravity="right"
        android:text="总价:99.88 优惠:0.88 实付款：99.00"
        android:textSize="11sp" />


    <RelativeLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_left"
                style="@style/text_gray_14_w_w"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="加入购物车"
                android:textColor="@color/green_text_666"
                android:visibility="gone"
                app:borderColorNormal="#DADADA"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_center"
                style="@style/text_gray_14_w_w"
                android:layout_width="88dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="9dp"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="查看物流"
                android:textColor="@color/green_text_666"
                android:visibility="gone"
                app:borderColorNormal="#DADADA"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_right"
                style="@style/text_gray_14_w_w"
                android:layout_width="88dp"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="付款"
                android:textColor="@color/green_text_666"
                app:borderColorNormal="#DADADA"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>
        </LinearLayout>

    </RelativeLayout>


</com.wei.android.lib.colorview.view.ColorLinearLayout>