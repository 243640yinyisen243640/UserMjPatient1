<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/hh_fi_wr"
    android:orientation="vertical">

    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:backgroundColorNormal="@color/white">

        <TextView
            style="@style/text_black_18_w_w"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="订单详情" />

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="7dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="订单号码" />

                <TextView
                    android:id="@+id/tv_order_number"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="4554651223113132" />

            </LinearLayout>


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="创建时间" />

                <TextView
                    android:id="@+id/tv_order_create_time"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="4554651223113132" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_info"
                style="@style/hh_fi_wr"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="付款时间" />

                <TextView
                    android:id="@+id/tv_pay_info"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="4554651223113132" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_send_time"
                style="@style/hh_fi_wr"
                android:layout_marginBottom="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text="发货时间" />

                <TextView
                    android:id="@+id/tv_send_time"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginRight="@dimen/dp_25"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="4554651223113132" />

            </LinearLayout>

        </LinearLayout>

    </com.wei.android.lib.colorview.view.ColorLinearLayout>


    <RelativeLayout
        style="@style/hh_fi_wr"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_14"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_left"
                style="@style/text_gray_14_w_w"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="加入购物车"
                android:textColor="@color/green_text_666"
                android:visibility="gone"
                app:borderColorNormal="#DADADA"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_right"
                style="@style/text_gray_14_w_w"
                android:layout_width="88dp"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="付款"
                android:textColor="@color/green_text_666"
                app:borderColorNormal="#DADADA"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
