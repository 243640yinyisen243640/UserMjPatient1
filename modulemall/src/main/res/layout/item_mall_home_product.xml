<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <!--圆角图片-->
    <com.kproduce.roundcorners.RoundImageView
        android:id="@+id/img_good"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_home_goods_pic"
        app:rTopLeftRadius="@dimen/dp_4"
        app:rTopRightRadius="@dimen/dp_4">

    </com.kproduce.roundcorners.RoundImageView>

    <!--介绍-->
    <com.kproduce.roundcorners.RoundLinearLayout
        android:id="@+id/ll_desc"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:rBottomLeftRadius="@dimen/dp_4"
        app:rBottomRightRadius="@dimen/dp_4">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_black_12_f_w"
            android:maxLines="1"
            android:singleLine="true"
            android:text="降糖药" />


        <!--标签 最多三个-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_height="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_label_one"
                android:layout_width="37dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="标签1"
                android:textColor="@color/main_green"
                android:textSize="@dimen/sp_10"
                app:backgroundColorNormal="#E4FCF4">

            </com.wei.android.lib.colorview.view.ColorTextView>

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_label_two"
                android:layout_width="37dp"
                android:layout_height="17dp"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="标签2"
                android:textColor="@color/main_green"
                android:textSize="@dimen/sp_10"
                app:backgroundColorNormal="#E4FCF4">

            </com.wei.android.lib.colorview.view.ColorTextView>

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_label_three"
                android:layout_width="37dp"
                android:layout_height="17dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="标签3"
                android:textColor="@color/main_green"
                android:textSize="@dimen/sp_10"
                app:backgroundColorNormal="#E4FCF4">

            </com.wei.android.lib.colorview.view.ColorTextView>


        </LinearLayout>


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_price"
                style="@style/text_black_14_w_w"
                android:layout_marginRight="@dimen/dp_4"
                android:text="￥68"
                android:textColor="#FF4F00" />

            <TextView
                android:id="@+id/tv_market_price"
                style="@style/text_gray_12_w_w"
                android:text="￥158" />


        </LinearLayout>

        <RelativeLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">


            <com.kproduce.roundcorners.RoundTextView
                style="@style/text_white_12_w_w"
                android:layout_weight="0.8"
                android:background="#FFBD25"
                android:text="人气热卖"
                app:rBottomLeftRadius="@dimen/dp_0"
                app:rBottomRightRadius="90dp"
                app:rTopLeftRadius="90dp"
                app:rTopRightRadius="90dp" />


            <TextView
                android:id="@+id/tv_sale_count"
                style="@style/text_gray_12_w_w"
                android:layout_alignParentRight="true"
                android:text="已售2.9w＋"
                android:textSize="10sp" />
        </RelativeLayout>

    </com.kproduce.roundcorners.RoundLinearLayout>


</LinearLayout>