<?xml version="1.0" encoding="utf-8"?>
<com.wei.android.lib.colorview.view.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_14"
    app:backgroundColorNormal="@color/white"
    app:cornerRadiusTopLeftNormal="@dimen/dp_10"
    app:cornerRadiusTopRightNormal="@dimen/dp_10">


    <TextView
        android:id="@+id/tv_title"
        style="@style/text_black_14_w_w"
        android:layout_gravity="center_horizontal"
        android:text="平台优惠"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_desc"
        style="@style/text_gray_14_w_w"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="请选择退款原因"
        android:textSize="13sp"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:itemCount="5"
        tools:listitem="@layout/item_popup_bottom_single_choice">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <com.kproduce.roundcorners.RoundTextView
            android:id="@+id/tv_cancel"
            style="@style/text_white_14_f_w"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="#0DDC94"
            android:gravity="center"
            android:text="取消"
            app:rBottomLeftRadius="180dp"
            app:rTopLeftRadius="180dp">

        </com.kproduce.roundcorners.RoundTextView>

        <com.kproduce.roundcorners.RoundTextView
            android:id="@+id/tv_sure"
            style="@style/text_white_14_f_w"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="#00C27F"
            android:gravity="center"
            android:text="确定"
            app:rBottomRightRadius="180dp"
            app:rTopRightRadius="180dp">

        </com.kproduce.roundcorners.RoundTextView>
    </LinearLayout>


</com.wei.android.lib.colorview.view.ColorLinearLayout>
