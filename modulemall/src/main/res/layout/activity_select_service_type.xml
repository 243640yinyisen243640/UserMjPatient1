<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="4dp">

        <!--第一部分-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/select_service_type_default_product_pic" />

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/text_black_14_w_w"
                    android:text="商品商品商品商品商品商品商品商品商品商品商品"
                    android:textSize="11sp" />


                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_specification"
                    style="@style/text_white_14_f_w"
                    android:layout_marginTop="@dimen/dp_15"
                    android:padding="3dp"
                    android:text="商品规格"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    app:backgroundColorNormal="#F9F9F9"
                    app:cornerRadiusNormal="@dimen/dp_1">


                </com.wei.android.lib.colorview.view.ColorTextView>


            </LinearLayout>
        </LinearLayout>


        <!--第二部分-->
        <com.wei.android.lib.colorview.view.ColorLinearLayout
            android:id="@+id/ll_one"
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            app:borderColorNormal="#9AB9D0"
            app:borderWidthNormal="@dimen/dp_1"
            app:cornerRadiusNormal="@dimen/dp_4">


            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/select_service_type_one" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="我要退款(无需退货)"
                    android:textSize="15sp" />


                <TextView
                    style="@style/text_gray_12_w_w"
                    android:text="没收到货，或与卖家协商同意不用退货只退款" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/select_service_type_arrow_right" />


        </com.wei.android.lib.colorview.view.ColorLinearLayout>


        <!--第三部分-->
        <com.wei.android.lib.colorview.view.ColorLinearLayout
            android:id="@+id/ll_two"
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            app:borderColorNormal="#9AB9D0"
            app:borderWidthNormal="@dimen/dp_1"
            app:cornerRadiusNormal="@dimen/dp_4">


            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/select_service_type_two" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="我要退货退款"
                    android:textSize="15sp" />


                <TextView
                    style="@style/text_gray_12_w_w"
                    android:text="已收到货，需要退还货物" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/select_service_type_arrow_right" />


        </com.wei.android.lib.colorview.view.ColorLinearLayout>

    </com.wei.android.lib.colorview.view.ColorLinearLayout>

</LinearLayout>