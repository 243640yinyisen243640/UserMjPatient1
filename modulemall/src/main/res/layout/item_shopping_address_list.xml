<?xml version="1.0" encoding="utf-8"?>
<com.wei.android.lib.colorview.view.ColorLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/hh_fi_wr"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    app:backgroundColorNormal="@color/white"
    app:cornerRadiusNormal="4dp">

    <LinearLayout
        android:id="@+id/ll_address_root"
        style="@style/hh_fi_wr"
        android:orientation="horizontal">
        <!--选中-->
        <ImageView
            android:id="@+id/img_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/address_check"
            android:visibility="gone" />

        <!--名称 地区 手机号-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_black_16_w_w"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="李小飞"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_default_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_shopping_address" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_address"
                style="@style/text_gray_14_w_w"
                android:layout_marginTop="@dimen/dp_5"
                android:text="北京市朝阳区朝阳小区"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_tel"
                style="@style/text_gray_14_w_w"
                android:layout_marginTop="@dimen/dp_5"
                android:text="18888888888"
                android:textSize="13sp" />


        </LinearLayout>


        <!--编辑 或 右箭头-->
        <ImageView
            android:id="@+id/img_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/product_detail_right_arrow"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_edit"
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">


            <View
                style="@style/line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_40" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:drawableLeft="@drawable/address_edit"
                android:drawablePadding="@dimen/dp_10"
                android:text="编辑" />

        </LinearLayout>

    </LinearLayout>


</com.wei.android.lib.colorview.view.ColorLinearLayout>




