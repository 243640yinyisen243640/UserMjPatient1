<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical"
    app:backgroundColorNormal="@color/white">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/img_product_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_order_detail_product_pic"
            app:qmui_border_width="@dimen/dp_0"
            app:qmui_corner_radius="@dimen/dp_4" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_14"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_product_name"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品"
                    android:textSize="11sp" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_type_state_price"
                        style="@style/text_black_14_w_w"
                        android:text="200"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/tv_type_state_count"
                        style="@style/text_black_14_w_w"
                        android:layout_gravity="right"
                        android:text="X1"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_product_desc"
                style="@style/text_white_14_w_w"
                android:layout_marginTop="7dp"
                android:padding="2.5dp"
                android:text="颜色：蓝色 尺码：S"
                android:textColor="#888888"
                android:textSize="11sp"
                app:backgroundColorNormal="#F9F9F9">

            </com.wei.android.lib.colorview.view.ColorTextView>
        </LinearLayout>
    </LinearLayout>


    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_refund"
        style="@style/text_gray_12_w_w"
        android:layout_width="80dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:padding="7dp"
        android:text="申请退款"
        android:visibility="gone"
        app:borderColorNormal="@color/gray_text"
        app:borderWidthNormal="@dimen/dp_1"
        app:cornerRadiusNormal="90dp">

    </com.wei.android.lib.colorview.view.ColorTextView>

</LinearLayout>