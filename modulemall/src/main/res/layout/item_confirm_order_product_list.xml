<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical"
    app:backgroundColorNormal="@color/white">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/my_order_detail_product_pic" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_14"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_name"
                    style="@style/text_black_14_f_w"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_weight="0.8"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品商品"
                    android:textSize="11sp" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/text_black_14_w_w"
                        android:text="200"
                        android:textColor="#FF3700"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/tv_count"
                        style="@style/text_black_14_w_w"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="X1"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_sku_name"
                style="@style/text_white_14_w_w"
                android:layout_marginTop="7dp"
                android:padding="2.5dp"
                android:text="颜色：蓝色 尺码：S"
                android:textColor="#888888"
                android:textSize="11sp"
                app:backgroundColorNormal="#F9F9F9">

            </com.wei.android.lib.colorview.view.ColorTextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>