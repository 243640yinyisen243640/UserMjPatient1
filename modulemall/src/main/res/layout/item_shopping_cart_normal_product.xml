<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_8"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_8">

    <ImageView
        android:id="@+id/img_check"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="26dp"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:src="@drawable/shopping_cart_checked" />


    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/img_product_pic"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@drawable/shopping_cart_default_product_img"
        app:qmui_corner_radius="@dimen/dp_4"
        app:qmui_is_circle="false">


    </com.qmuiteam.qmui.widget.QMUIRadiusImageView>


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            style="@style/text_black_14_w_w"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:singleLine="true"
            android:text="商品商品商品" />

        <TextView
            android:id="@+id/tv_product_desc"
            style="@style/text_gray_14_w_w"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:maxLines="1"
            android:singleLine="true"
            android:text="颜色：蓝 尺码：S" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="horizontal">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="￥"
                    android:textColor="#FF3700"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/tv_product_price"
                    style="@style/text_black_14_w_w"
                    android:text="100,000"
                    android:textColor="#FF3700"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                style="@style/hh_wr_wr"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_minus"
                    style="@style/text_black_12_w_w"
                    android:layout_width="24dp"
                    android:layout_height="@dimen/dp_18"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#888888"
                    app:backgroundColorNormal="#F5F5F5"
                    app:cornerRadiusNormal="@dimen/dp_4">

                </com.wei.android.lib.colorview.view.ColorTextView>

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_count"
                    style="@style/text_black_12_w_w"
                    android:layout_width="46dp"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/dp_2"
                    android:gravity="center"
                    android:text="1"
                    app:backgroundColorNormal="#F5F5F5"
                    app:cornerRadiusNormal="@dimen/dp_4">

                </com.wei.android.lib.colorview.view.ColorTextView>

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_plus"
                    style="@style/text_black_12_w_w"
                    android:layout_width="24dp"
                    android:layout_height="@dimen/dp_18"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#888888"
                    app:backgroundColorNormal="#F5F5F5"
                    app:cornerRadiusNormal="@dimen/dp_4">

                </com.wei.android.lib.colorview.view.ColorTextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>