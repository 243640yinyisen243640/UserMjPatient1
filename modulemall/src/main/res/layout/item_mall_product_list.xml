<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">


    <com.kproduce.roundcorners.RoundImageView
        android:id="@+id/img_good"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="@dimen/dp_5"
        android:scaleType="centerCrop"
        android:src="@drawable/default_home_goods_pic"
        app:rRadius="@dimen/dp_4" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="5dp">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_black_14_w_w"
                android:text="适糖米" />


            <!--标签 最多三个-->
            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_label_one"
                    android:layout_width="37dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:text="标签123456789"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:maxLines="1"
                    android:textColor="@color/main_green"
                    android:textSize="@dimen/sp_10"
                    app:backgroundColorNormal="#E4FCF4">

                </com.wei.android.lib.colorview.view.ColorTextView>

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_label_two"
                    android:layout_width="37dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:text="标签1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/main_green"
                    android:textSize="@dimen/sp_10"
                    app:backgroundColorNormal="#E4FCF4">

                </com.wei.android.lib.colorview.view.ColorTextView>

                <com.wei.android.lib.colorview.view.ColorTextView
                    android:id="@+id/tv_label_three"
                    android:layout_width="37dp"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:text="标签1"
                    android:ellipsize="end"
                    android:textColor="@color/main_green"
                    android:textSize="@dimen/sp_10"
                    app:backgroundColorNormal="#E4FCF4">

                </com.wei.android.lib.colorview.view.ColorTextView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/text_black_14_w_w"
                    android:layout_marginRight="@dimen/dp_4"
                    android:text="￥68"
                    android:textColor="#FF4F00" />

                <TextView
                    android:id="@+id/tv_market_price"
                    style="@style/text_gray_12_w_w"
                    android:text="￥158" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sale_count"
                style="@style/text_gray_12_w_w"
                android:text="已售2.9w＋"
                android:textSize="10sp" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>