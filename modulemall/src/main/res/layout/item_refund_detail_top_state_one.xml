<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">


    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="4dp">

        <TextView
            android:id="@+id/tv_state_text"
            style="@style/text_black_14_w_w"
            android:text="请等待卖家处理"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_state_time"
            style="@style/text_gray_14_w_w"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2020-05-19 12:32"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tv_state_desc"
            style="@style/text_gray_14_w_w"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="您已成功发起退款申请，请您耐心等待卖家处理"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_operate"
            style="@style/hh_wr_wr"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_left"
                style="@style/text_gray_12_w_w"
                android:layout_width="80dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:padding="7dp"
                android:text="撤销申请"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="@dimen/dp_1"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_right"
                style="@style/text_gray_12_w_w"
                android:layout_width="80dp"
                android:layout_gravity="right"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center"
                android:padding="7dp"
                android:text="修改申请"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="@dimen/dp_1"
                app:cornerRadiusNormal="90dp">

            </com.wei.android.lib.colorview.view.ColorTextView>

        </LinearLayout>


    </com.wei.android.lib.colorview.view.ColorLinearLayout>


</LinearLayout>