<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_left"
            style="@style/text_black_14_w_w"
            android:text="2020-06-28 16:00" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_toRightOf="@id/tv_left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right_left"
                style="@style/text_black_14_f_w"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中间"
                android:textColor="@color/red_bright" />

            <TextView
                android:id="@+id/tv_right_right"
                style="@style/text_gray_14_f_w"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:paddingLeft="@dimen/dp_6"
                android:singleLine="true"
                android:text="方式" />

        </LinearLayout>


    </RelativeLayout>

    <View style="@style/line" />

</LinearLayout>