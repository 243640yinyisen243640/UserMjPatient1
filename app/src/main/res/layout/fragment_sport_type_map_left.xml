<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wei.android.lib.colorview.view.ColorRelativeLayout
        android:id="@+id/rl_center"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="180dp">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_type_left_bike" />


            <TextView
                android:id="@+id/tv_sport_type_text"
                style="@style/text_white_14_w_w"
                android:layout_gravity="center"
                android:text="自行车" />

        </LinearLayout>


    </com.wei.android.lib.colorview.view.ColorRelativeLayout>


</FrameLayout>