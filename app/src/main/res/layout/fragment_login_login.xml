<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_18"
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18">


        <TextView
            android:id="@+id/tv_register"
            style="@style/text_black_14_w_w"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:text="注册" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/et_input_phone_or_id_card"
            style="@style/et_base_style_no_bg"
            android:digits="0123456789Xx"
            android:hint="请输入手机号或身份证号"
            android:maxLength="18" />


        <View
            style="@style/line"
            android:layout_marginTop="@dimen/dp_10" />

        <EditText
            android:id="@+id/et_pwd"
            style="@style/et_base_style_no_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:hint="请输入密码"
            android:inputType="textPassword" />


        <View
            style="@style/line"
            android:layout_marginTop="@dimen/dp_10">

        </View>


        <com.wei.android.lib.colorview.view.ColorTextView
            android:id="@+id/tv_login"
            style="@style/text_gray_14_f_w"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_14"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="登录"
            android:textColor="@color/white"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="@dimen/dp_2">


        </com.wei.android.lib.colorview.view.ColorTextView>

        <LinearLayout style="@style/hh_fi_wr">

            <TextView
                android:id="@+id/tv_forget_pwd"
                style="@style/text_black_12_f_w"
                android:layout_weight="0.8"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="忘记密码"
                android:textColor="@color/main_home" />

            <TextView
                android:id="@+id/tv_register_code_quick_login"
                style="@style/text_black_12_w_w"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="验证码快速登录"
                android:textColor="@color/main_home" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bottom_desc"
            style="@style/text_gray_12_w_w"
            android:layout_margin="8dp"
            android:text="若已通过医生刷身份证注册，则初始密码“888888“，登录后请前往“账号安全”绑定手机号并完成密码修改" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_service_agreement"
        style="@style/hh_fi_wr"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20">


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                style="@style/text_gray_12_w_w"
                android:text="登录即代表您已同意" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:text="《沃享健康用户服务协议》"
                android:textColor="@color/main_home" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>




