<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line" />

    <RelativeLayout
        android:id="@+id/rl_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/registration_main_registration" />

            <com.wei.android.lib.colorview.view.ColorTextView
                style="@style/text_white_16_w_w"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:text="挂号预约"
                android:textColor="@color/main_home"
                app:backgroundColorNormal="@color/white"
                app:borderColorNormal="@color/main_home"
                app:borderWidthNormal="2dp"
                app:cornerRadiusNormal="90dp">


            </com.wei.android.lib.colorview.view.ColorTextView>

        </LinearLayout>


    </RelativeLayout>

    <View style="@style/line" />

    <RelativeLayout
        android:id="@+id/rl_treat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/registration_main_treat" />

            <com.wei.android.lib.colorview.view.ColorTextView
                style="@style/text_white_16_w_w"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingLeft="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_10"
                android:text="诊疗预约"
                android:textColor="@color/main_home"
                app:backgroundColorNormal="@color/white"
                app:borderColorNormal="@color/main_home"
                app:borderWidthNormal="2dp"
                app:cornerRadiusNormal="90dp">


            </com.wei.android.lib.colorview.view.ColorTextView>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>