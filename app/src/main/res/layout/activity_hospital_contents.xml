<?xml version="1.0" encoding="utf-8"?>
<ScrollView style="@style/scrollView">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/default_hospital" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_text"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_black_16_f_w"
                android:text="北京医院" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_4"
                android:text="河南郑州" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tel"
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_text"
            android:padding="@dimen/dp_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/hospital_tel" />

            <TextView
                android:id="@+id/tv_tel"
                style="@style/text_gray_14_f_w"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="5214436" />


            <com.wei.android.lib.colorview.view.ColorTextView
                style="@style/text_white_12_w_w"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4"
                android:text="拨打电话"
                app:backgroundColorNormal="@color/main_home"
                app:cornerRadiusNormal="90dp" />


        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_text"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                style="@style/text_black_16_f_w"
                android:text="医院简介:" />

            <TextView
                android:id="@+id/tv_desc"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_5"
                android:lineSpacingMultiplier="1.2"
                android:text="首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学首都大学" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
