<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.homesign.HospitalizationAppointmentListActivity">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_app"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_app"
            style="@style/listView"
            tools:listitem="@layout/item_appointment" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_add"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:text="预约住院"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="@dimen/dp_5" />

</LinearLayout>