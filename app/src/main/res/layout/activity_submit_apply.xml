<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:src="@drawable/submit_apply" />

    <TextView
        style="@style/text_black_18_w_w"
        android:layout_gravity="center"
        android:text="申请成功"
        android:textSize="@dimen/size_20"
        android:textStyle="bold" />

    <TextView
        style="@style/text_gray_14_w_w"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:text="已通知医生,请耐心等待医生下发方案"
        android:textSize="@dimen/size_18" />


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_apply_again"
        style="@style/text_white_16_w_w"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="重新申请"
        android:visibility="gone"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_back_to_main_activity"
        style="@style/text_white_16_w_w"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="返回首页"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />


</LinearLayout>