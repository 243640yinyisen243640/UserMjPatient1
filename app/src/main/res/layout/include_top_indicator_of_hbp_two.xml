<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="38dp"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginBottom="38dp"
    android:orientation="horizontal"
    android:visibility="visible">


    <!--健康信息-->
    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_indicator_health"
        style="@style/text_white_14_f_w"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_14"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_14"
        android:text="健康信息"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="@dimen/dp_15">

    </com.wei.android.lib.colorview.view.ColorTextView>


    <View
        style="@style/line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="9dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:background="@color/color_e5" />

    <!--饮食信息-->
    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_indicator_diet"
        style="@style/text_white_14_f_w"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_14"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_14"
        android:text="饮食信息"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="@dimen/dp_15">

    </com.wei.android.lib.colorview.view.ColorTextView>


    <View
        style="@style/line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="9dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.8"
        android:background="@color/color_e5" />
    <!--运动信息-->
    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_indicator_sport"
        style="@style/text_white_14_f_w"
        android:layout_width="@dimen/dp_0"
        android:layout_weight="2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_14"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_14"
        android:text="运动信息"
        android:textColor="@color/gray_text"
        app:backgroundColorNormal="@color/color_e5"
        app:cornerRadiusNormal="@dimen/dp_15">

    </com.wei.android.lib.colorview.view.ColorTextView>


</LinearLayout>