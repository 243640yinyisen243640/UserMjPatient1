<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:drawableStart="@drawable/icon_food_detail"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="大米"
                android:textAlignment="gravity"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/dp_15"
                android:background="@color/gray_text"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="重量(克)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_explain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/black_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="GI(血糖生成指数)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_gival"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/black_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="热量(kcal)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_kcalval"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="256"
                        android:textColor="@color/black_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="蛋白质(克)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_protein"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="125.3"
                        android:textColor="@color/black_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="脂肪(克)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_fatval"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="6.8"
                        android:textColor="@color/black_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:text="碳水化合物(克)"
                        android:textColor="@color/black_text"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_food_detail_carbohy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="66.9"
                        android:textColor="@color/black_text" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_food_detail_nutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:drawableStart="@drawable/nutrition_food_detail"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="营养价值"
                android:textAlignment="gravity"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_food_detail_nutrition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="燕麦是一种低糖、高蛋白质、高能量食品，蛋白质中的必需氨基酸在谷类粮食中平衡最好，赖氨酸和蛋氨酸含量比较理想，其必需脂肪酸的含量也非常丰富，其中亚油酸占脂肪酸的1/3以上，维生素和矿物质也很丰富，特别是维生素B，居谷类粮食之首。"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_food_detail_anti_sugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:drawableStart="@drawable/tips"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="抗糖贴士"
                android:textAlignment="gravity"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_food_detail_anti_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="谷粒供磨面食用，或作饲料，营养价值很高。在中国人日常食用的小麦、稻米、玉米等9种食粮中，以燕麦的经济价值最高，其主要表现在营养、医疗保健和饲用价值均高。燕麦中的β-葡聚糖可减缓血液中葡萄糖含量的增加，预防和控制肥胖症、糖尿病及心血管疾病。燕麦富含的膳食纤维具有清理肠道垃圾的作用。"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_food_detail_complication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:drawableStart="@drawable/ic_good_food_detail"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="对并发症的益处"
                android:textAlignment="gravity"
                android:textColor="@color/black_text"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tv_food_detail_benefits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="燕麦片是燕麦粒轧制而成，呈扁平状，直径约相当于黄豆粒，形状完整的一种食品。燕麦煮出来高度粘稠，其中beta葡聚糖健康成分所带来的，具有降血脂、降血糖、高饱腹的效果。"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>