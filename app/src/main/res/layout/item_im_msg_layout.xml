<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rc_ic_bubble_left_file">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_black_16_f_w"
            android:text="血糖异常通知" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_gray_14_f_w"
            android:layout_marginTop="@dimen/dp_2"
            android:text="2019 06 11" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_2">

            <TextView
                android:id="@+id/tv_left_desc"
                style="@style/text_black_14_w_w"
                android:text="午餐后" />

            <TextView
                style="@style/text_black_14_w_w"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=":" />

            <TextView
                android:id="@+id/tv_right_content"
                style="@style/text_black_14_w_w"
                android:text="15.0"
                android:textColor="@color/main_red" />

            <TextView
                android:id="@+id/tv_dosage"
                style="@style/text_black_14_w_w"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="mmol/L" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_3"
            style="@style/hh_fi_wr"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_2">

                <TextView
                    android:id="@+id/tv_left_state_desc"
                    style="@style/text_black_14_w_w"
                    android:text="血糖状态" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=":" />

                <TextView
                    android:id="@+id/tv_right_state_content"
                    style="@style/text_black_14_w_w"
                    android:text="偏高"
                    android:textColor="@color/main_red" />


            </LinearLayout>


            <LinearLayout style="@style/hh_fi_wr">

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_weight="0.8" />

                <TextView
                    android:id="@+id/tv_look_deal"
                    style="@style/text_black_14_w_w"
                    android:text="查看处理" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/img_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:scaleType="centerCrop"
        android:src="@drawable/im_msg_doing" />


</FrameLayout>
