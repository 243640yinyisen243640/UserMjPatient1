<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.wei.android.lib.colorview.view.ColorLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="12dp"
        app:backgroundColorNormal="@color/white"
        app:cornerRadiusNormal="@dimen/dp_15">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_black_14_f_w"
                android:text="尿常规报告" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_gray_12_f_w"
                android:layout_marginTop="@dimen/dp_5"
                android:text="2019-08-29 12:33" />

        </LinearLayout>


        <com.wei.android.lib.colorview.view.ColorTextView
            style="@style/text_white_12_w_w"
            android:paddingLeft="26dp"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="26dp"
            android:paddingBottom="@dimen/dp_8"
            android:text="立即查看"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="5dp">

        </com.wei.android.lib.colorview.view.ColorTextView>


    </com.wei.android.lib.colorview.view.ColorLinearLayout>


</LinearLayout>
