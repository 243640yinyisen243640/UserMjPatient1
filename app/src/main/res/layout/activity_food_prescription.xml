<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/scrollView">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_8"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_8">

            <View
                style="@style/line"
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:background="@color/main_home" />

            <TextView
                style="@style/text_black_14_w_w"
                android:drawableRight="@drawable/prescription_checked"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:text="饮食处方" />


        </LinearLayout>

        <!--第一部分-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:background="@color/white"
            android:orientation="vertical">
            <!--身高-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="身高" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_height"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="cm" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--体重 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="体重" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_weight"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="kg" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--年龄-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="年龄" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_age"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="岁" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginStart="@dimen/dp_10" />
            <!--腰围-->
            <LinearLayout
                android:id="@+id/ll_waistline"
                style="@style/hh_fi_wr"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="腰围" />


                    <LinearLayout
                        style="@style/hh_wr_wr"
                        android:layout_alignParentRight="true">

                        <EditText
                            android:id="@+id/et_waistline"
                            style="@style/et_non_drug_input"
                            android:hint="请输入" />


                        <TextView
                            style="@style/text_black_14_w_w"
                            android:text="cm" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginStart="@dimen/dp_10" />
            </LinearLayout>

            <!--减重 隐藏-->
            <LinearLayout
                android:id="@+id/ll_weight_one"
                style="@style/hh_fi_wr"
                android:orientation="vertical">
                <!--最近一次空腹血糖测值(mmol/L)-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="最近一次空腹血糖值" />


                    <LinearLayout
                        style="@style/hh_wr_wr"
                        android:layout_alignParentRight="true">

                        <EditText
                            android:id="@+id/et_recent_empty"
                            style="@style/et_non_drug_input"
                            android:layout_alignParentRight="true"
                            android:hint="请输入" />


                        <TextView
                            style="@style/text_black_14_w_w"
                            android:text="mmol/L" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />
                <!--最近一次餐后2小时血糖测值(mmol/L)-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="最近一次餐后2小时血糖值" />


                    <LinearLayout
                        style="@style/hh_wr_wr"
                        android:layout_alignParentRight="true">

                        <EditText
                            android:id="@+id/et_recent_two_hours"
                            style="@style/et_non_drug_input"
                            android:layout_alignParentRight="true"
                            android:hint="请输入" />


                        <TextView
                            style="@style/text_black_14_w_w"
                            android:text="mmol/L" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />
                <!--最近一次糖化血红蛋白(%)-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="最近一次糖化血红蛋白" />


                    <LinearLayout
                        style="@style/hh_wr_wr"
                        android:layout_alignParentRight="true">

                        <EditText
                            android:id="@+id/et_recent_sugar"
                            style="@style/et_non_drug_input"
                            android:layout_alignParentRight="true"
                            android:hint="请输入" />


                        <TextView
                            style="@style/text_black_14_w_w"
                            android:text="%" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />
            </LinearLayout>

        </LinearLayout>


        <!--第二部分-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <!--收缩压(高压)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="收缩压(高压)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_high_pressure"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmHg" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--舒张压(低压)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="舒张压(低压)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_low_pressure"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmHg" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--胆固醇(TC)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="胆固醇(TC)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_tc"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmol/L" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--甘油三酯(TG)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="甘油三酯(TG)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_tg"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmol/L" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--低密度脂蛋白(LDL)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="低密度脂蛋白(LDL)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_ldl"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmol/L" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--高密度脂蛋白(HDL)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="高密度脂蛋白(HDL)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_hdl"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mmol/L" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginStart="@dimen/dp_10" />
        </LinearLayout>

        <!--第三部分-->

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">
            <!--劳动强度-->
            <RelativeLayout
                android:id="@+id/rl_labour_intensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="劳动强度" />


                <TextView
                    android:id="@+id/tv_labour_intensity"
                    style="@style/et_non_drug_select"
                    android:hint="请选择" />


            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />

            <!--肾损-->
            <RelativeLayout
                android:id="@+id/rl_kidney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="是否有肾损伤" />


                <TextView
                    android:id="@+id/tv_kidney"
                    style="@style/et_non_drug_select"
                    android:hint="请选择" />


            </RelativeLayout>

            <!--吸烟-->
            <RelativeLayout
                android:id="@+id/rl_smoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="是否吸烟" />


                <TextView
                    android:id="@+id/tv_smoke"
                    style="@style/et_non_drug_select"
                    android:hint="请选择" />


            </RelativeLayout>


        </LinearLayout>
        <!--第四部分-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">
            <!--血清肌酐(SRC)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="血清肌酐(SRC)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_src"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="umol/L" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginStart="@dimen/dp_10" />
            <!--尿白蛋白/肌酐(ACR)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="ACR" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_acr"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="mg/g" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />
            <!--肾小球滤过率(GFR)-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="肾小球滤过率(GFR)" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true">

                    <EditText
                        android:id="@+id/et_gfr"
                        style="@style/et_non_drug_input"
                        android:hint="请输入" />


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="ml/(min.1.73m2)" />

                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />


        </LinearLayout>

        <!--第五部分-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">
            <!--糖尿病肾病-->
            <RelativeLayout
                android:id="@+id/rl_diabetic_nephropathy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    android:id="@+id/tv_is_diabetic_nephropathy"
                    style="@style/text_black_14_w_w"
                    android:text="是否患有糖尿病肾病" />


                <TextView
                    android:id="@+id/tv_diabetic_nephropathy"
                    style="@style/et_non_drug_select"
                    android:hint="请选择" />


            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />


            <LinearLayout
                android:id="@+id/ll_diabetic_nephropathy_bottom_2"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 慢性肾病肾功能分期-->
                <RelativeLayout
                    android:id="@+id/rl_diabetic_nephropathy_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="慢性肾病肾功能分期" />


                    <TextView
                        android:id="@+id/tv_diabetic_nephropathy_period"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />
                <!-- 确诊时间-->
                <RelativeLayout
                    android:id="@+id/rl_diabetic_nephropathy_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="确诊时间" />


                    <TextView
                        android:id="@+id/tv_diabetic_nephropathy_time"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />

            </LinearLayout>

        </LinearLayout>

        <!--第六部分-->

        <LinearLayout
            android:id="@+id/ll_weight_two"
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_recent_three_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12">


                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="近三天血糖是否偏高" />


                <TextView
                    android:id="@+id/tv_recent_three_days"
                    style="@style/et_non_drug_select"
                    android:hint="请选择" />


            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10" />

            <!--是-->
            <LinearLayout
                android:id="@+id/ll_yes"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_recent_three_days_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="血糖偏高的时间" />


                    <TextView
                        android:id="@+id/tv_recent_three_days_time"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10" />

            </LinearLayout>

            <!--否-->
            <!--是否使用标准化均衡饮食方案-->
            <LinearLayout
                android:id="@+id/ll_no_balance"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_recent_three_days_is_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="是否使用标准化均衡饮食方案" />


                    <TextView
                        android:id="@+id/tv_recent_three_days_is_balance"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginStart="@dimen/dp_10" />

            </LinearLayout>
            <!--是否使用加餐方案-->
            <LinearLayout
                android:id="@+id/ll_no_add"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_recent_three_days_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="是否使用加餐方案" />


                    <TextView
                        android:id="@+id/tv_recent_three_days_add"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10"></View>

            </LinearLayout>
            <!--请选择加餐次数-->
            <LinearLayout
                android:id="@+id/ll_no_add_count"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_recent_three_days_add_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="请选择加餐次数" />


                    <TextView
                        android:id="@+id/tv_recent_three_days_add_count"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10"></View>

            </LinearLayout>
            <!--请选择加餐时间-->
            <LinearLayout
                android:id="@+id/ll_no_add_time"
                style="@style/hh_fi_wr"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_recent_three_days_add_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12">


                    <TextView
                        style="@style/text_black_14_w_w"
                        android:text="请选择加餐时间" />


                    <TextView
                        android:id="@+id/tv_recent_three_days_add_time"
                        style="@style/et_non_drug_select"
                        android:hint="请选择" />


                </RelativeLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="@dimen/dp_10"></View>

            </LinearLayout>


        </LinearLayout>


        <com.wei.android.lib.colorview.view.ColorButton
            android:id="@+id/bt_next"
            style="@style/text_white_16_w_w"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="下一步"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="90dp" />


    </LinearLayout>

</ScrollView>
