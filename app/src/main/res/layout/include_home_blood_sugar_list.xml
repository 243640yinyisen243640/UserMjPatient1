<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <View
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@drawable/green_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="血糖记录"
            android:textColor="@color/black"
            android:textSize="@dimen/fifteen"
            android:textStyle="bold" />
    </LinearLayout>


    <com.kproduce.roundcorners.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rRadius="6dp"
        app:rStrokeColor="@color/home_diet_f9"
        app:rStrokeWidth="1dp">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56.5dp"
                android:background="@color/white">

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="日期" />

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="凌晨" />

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />


                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_black_14_w_w"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="早餐" />

                    <View
                        style="@style/line"
                        android:layout_height="0.5dp"
                        android:background="@color/sugar_divider_home" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_height="28dp">

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="空腹" />

                        <View
                            style="@style/line"
                            android:layout_width="0.5dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/sugar_divider_home" />

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />

                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_black_14_w_w"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="午餐" />

                    <View
                        style="@style/line"
                        android:layout_height="0.5dp"
                        android:background="@color/sugar_divider_home" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_height="28dp">

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="前" />

                        <View
                            style="@style/line"
                            android:layout_width="0.5dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/sugar_divider_home" />

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />

                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_black_14_w_w"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="晚餐" />

                    <View
                        style="@style/line"
                        android:layout_height="0.5dp"
                        android:background="@color/sugar_divider_home" />

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:layout_height="28dp">

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="前" />

                        <View
                            style="@style/line"
                            android:layout_width="0.5dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/sugar_divider_home" />

                        <TextView
                            style="@style/text_black_14_w_w"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="后" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="睡前" />

                <View
                    style="@style/line"
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/sugar_divider_home" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_blood_sugar_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_home_blood_sugar">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>


    </com.kproduce.roundcorners.RoundLinearLayout>
</LinearLayout>