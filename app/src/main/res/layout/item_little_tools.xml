<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_16"
    app:hl_cornerRadius="@dimen/dp_14"
    app:hl_shadowColor="#38000000"
    app:hl_shadowOffsetX="0dp"
    app:hl_shadowOffsetY="0dp">


    <RelativeLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal"
        android:padding="@dimen/dp_20">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_little_tools"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_8"
                android:scaleType="centerCrop"
                android:src="@drawable/little_tools_1" />

            <TextView
                android:id="@+id/tv_little_tools"
                style="@style/text_black_16_w_w"
                android:text="风险预警" />
        </LinearLayout>


        <com.wei.android.lib.colorview.view.ColorTextView
            style="@style/text_black_14_w_w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="14dp"
            android:paddingTop="7dp"
            android:paddingRight="14dp"
            android:paddingBottom="7dp"
            android:text="去测评"
            android:textColor="@color/main_home"
            app:backgroundColorNormal="@color/white"
            app:borderColorNormal="@color/main_home"
            app:borderWidthNormal="1dp"
            app:cornerRadiusNormal="90dp" />


    </RelativeLayout>


</com.lihang.ShadowLayout>