<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical">

        <View style="@style/line" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="*"
                    android:textColor="@color/red_bright" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="问题和意见" />
            </LinearLayout>


            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_question"
                style="@style/text_black_14_f_w"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@null"
                android:gravity="left"
                android:hint="请描述您在使用过程中遇到的问题，上传页面截图帮助更快解决..."
                android:maxLines="5"
                android:minLines="5"
                android:padding="7dp"
                android:textColorHint="@color/gray_text"
                app:backgroundColorNormal="#E1E1E1"
                app:cornerRadiusNormal="@dimen/dp_2">

            </com.wei.android.lib.colorview.view.ColorEditText>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_gravity="center_vertical"
                    android:text="添加图片" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_submit"
        style="@style/text_white_16_f_w"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="300dp"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="提交"
        android:textColor="@color/main_home"
        app:backgroundColorNormal="@color/white"
        app:borderColorNormal="@color/main_home"
        app:borderWidthNormal="1dp"
        app:cornerRadiusNormal="90dp" />

</RelativeLayout>