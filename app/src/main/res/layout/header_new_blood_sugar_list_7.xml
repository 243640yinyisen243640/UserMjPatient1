<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/hh_fi_wr"
    android:background="@color/background">


    <!--底层-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            style="@style/line"
            android:layout_height="130dp"
            android:background="@color/main_home" />

        <include layout="@layout/header_seven_and_thirty" />


    </LinearLayout>

    <!--基本信息 上层-->
    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="22dp"
        app:hl_cornerRadius="5dp"
        app:hl_shadowColor="@color/main_home"
        app:hl_shadowLimit="5dp"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="2dp">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <!--时间选择-->
            <RelativeLayout style="@style/hh_fi_wr">

                <TextView
                    android:id="@+id/tv_time_start"
                    style="@style/text_black_14_w_w"
                    android:layout_alignParentLeft="true"
                    android:drawableRight="@drawable/right_arrow_down"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="选择开始时间" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:layout_centerInParent="true"
                    android:text="至" />

                <TextView
                    android:id="@+id/tv_time_end"
                    style="@style/text_black_14_w_w"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/right_arrow_down"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="选择结束时间" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />
            <!--偏高 正常 偏低 最高 平均 最低-->

            <LinearLayout style="@style/hh_fi_wr">

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="偏高" />

                <View
                    style="@style/line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical" />

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="正常" />

                <View
                    style="@style/line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical" />

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="偏低" />

                <View
                    style="@style/line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical" />

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最高" />

                <View
                    style="@style/line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical" />

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="平均" />

                <View
                    style="@style/line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical" />

                <TextView
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最低" />


            </LinearLayout>

            <!--对应上边六个次数-->

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_high"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3次"
                    android:textColor="@color/main_red" />


                <TextView
                    android:id="@+id/tv_normal"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3次"
                    android:textColor="@color/sugar_green_bright" />


                <TextView
                    android:id="@+id/tv_low"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="3次"
                    android:textColor="@color/home_blue" />


                <TextView
                    android:id="@+id/tv_highest"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="33"
                    android:textColor="@color/sugar_purple" />


                <TextView
                    android:id="@+id/tv_average"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="16.5"
                    android:textColor="@color/sugar_green_light" />


                <TextView
                    android:id="@+id/tv_lowest"
                    style="@style/text_black_14_f_w"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/sugar_blue_bright" />


            </LinearLayout>


        </LinearLayout>

    </com.lihang.ShadowLayout>


    <!--7天 30天-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <!--7天-->
        <LinearLayout
            android:id="@+id/ll_7"
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_white_18_w_w"
                android:text="7天" />

            <View
                android:id="@+id/line_7"
                style="@style/line"
                android:visibility="visible"
                android:layout_width="@dimen/dp_50"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white" />
        </LinearLayout>
        <!--30天-->
        <LinearLayout
            android:id="@+id/ll_30"
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/text_white_18_w_w"
                android:text="30天" />

            <View
                android:id="@+id/line_30"
                style="@style/line"
                android:visibility="invisible"
                android:layout_width="@dimen/dp_50"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>






