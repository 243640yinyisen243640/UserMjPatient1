<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical">

        <View style="@style/line" />

        <!--问题反馈-->
        <TextView
            android:id="@+id/tv_question_feed_back"
            style="@style/text_black_16_f_w"
            android:drawableRight="@drawable/arrow_setting"
            android:padding="18dp"
            android:text="问题反馈" />


        <View style="@style/line" />
        <!--联系我们-->
        <TextView
            android:id="@+id/tv_connect_us"
            style="@style/text_black_16_f_w"
            android:drawableRight="@drawable/arrow_setting"
            android:padding="18dp"
            android:text="联系我们" />

        <View style="@style/line" />

        <!--检查更新-->

        <LinearLayout
            android:id="@+id/ll_update"
            style="@style/hh_fi_wr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_update"
                style="@style/text_black_16_f_w"
                android:layout_weight="0.8"
                android:padding="18dp"
                android:text="检查新版本" />

            <TextView
                android:id="@+id/tv_version_name"
                style="@style/text_gray_14_w_w"
                android:drawableRight="@drawable/arrow_setting"
                android:drawablePadding="@dimen/dp_10"
                android:padding="18dp"
                android:text="v1.0" />

        </LinearLayout>

        <View style="@style/line" />

        <!--服务协议-->
        <TextView
            android:id="@+id/tv_user_agreement"
            style="@style/text_black_16_f_w"
            android:drawableRight="@drawable/arrow_setting"
            android:padding="18dp"
            android:text="用户服务协议" />

        <View style="@style/line" />
    </LinearLayout>


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/text_gray_14_w_w"
            android:text="Copyright©2016-2021" />

        <TextView
            style="@style/text_gray_14_w_w"
            android:layout_marginTop="@dimen/dp_5"
            android:text="广州沃通智能科技开发有限公司 版权所有" />
    </LinearLayout>


</RelativeLayout>