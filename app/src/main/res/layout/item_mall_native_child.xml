<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical">

    <!--圆角图片-->
    <com.kproduce.roundcorners.RoundImageView
        android:id="@+id/img_good"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        app:rStrokeColor="@color/main_home"
        app:rStrokeWidth="3dp"
        app:rTopLeftRadius="@dimen/dp_4"
        app:rTopRightRadius="@dimen/dp_4">

    </com.kproduce.roundcorners.RoundImageView>

    <!--介绍-->
    <com.kproduce.roundcorners.RoundLinearLayout
        android:id="@+id/ll_desc"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="167dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="visible"
        app:rBottomLeftRadius="@dimen/dp_4"
        app:rBottomRightRadius="@dimen/dp_4">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_black_12_f_w"
                android:layout_weight="0.8"
                android:maxLines="1"
                android:singleLine="true"
                android:text="降糖药" />

            <com.kproduce.roundcorners.RoundTextView
                android:id="@+id/tv_lable"
                style="@style/text_white_12_w_w"
                android:background="#FFBD25"
                android:text="人气热卖"
                app:rBottomLeftRadius="@dimen/dp_0"
                app:rBottomRightRadius="90dp"
                app:rTopLeftRadius="90dp"
                app:rTopRightRadius="90dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_desc"
            style="@style/text_gray_14_f_w"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="有效控制餐后血糖 与普通大米相比有效预防夜间低血糖 1Kg/...有效控制餐后血糖 与普通大米相比有效预防夜间低血糖 1Kg/..."
            android:textSize="10sp"
            android:visibility="gone" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                style="@style/text_black_14_f_w"
                android:layout_weight="0.8"
                android:text="￥68 ￥158" />

            <TextView
                android:id="@+id/tv_sale_count"
                style="@style/text_gray_12_w_w"
                android:text="已售2.9w＋"
                android:textSize="10sp" />

        </LinearLayout>


    </com.kproduce.roundcorners.RoundLinearLayout>


</FrameLayout>