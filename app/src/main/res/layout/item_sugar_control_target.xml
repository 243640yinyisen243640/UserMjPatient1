<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical">


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_cornerRadius="@dimen/dp_5"
        app:hl_shadowColor="@color/color_ffececf6"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="1dp">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_type_name"
                style="@style/text_black_18_w_w"
                android:text="空腹" />


            <RelativeLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_18"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:text="最低值" />

                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_input_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp">

                    </EditText>


                    <TextView
                        style="@style/text_gray_14_w_w"
                        android:text="mmol/L" />


                </LinearLayout>
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10" />

            <RelativeLayout
                style="@style/hh_fi_wr"

                android:orientation="horizontal">

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:text="最高值" />

                <LinearLayout
                    style="@style/hh_wr_wr"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_input_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/gray_text"
                        android:textSize="14sp">

                    </EditText>


                    <TextView
                        style="@style/text_gray_14_w_w"
                        android:text="mmol/L" />


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </com.lihang.ShadowLayout>


</LinearLayout>