<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line">

    </View>

    <!--身份证号-->
    <LinearLayout
        android:id="@+id/ll_look_id_number"
        style="@style/hh_fi_wr"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">


        <TextView
            style="@style/text_black_14_w_w"
            android:text="身份证号码" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/tv_id_number"
                style="@style/text_gray_12_f_w"
                android:layout_weight="0.8"
                android:text="4114211996****1221" />


            <TextView
                android:id="@+id/tv_bind_or_look_id_card"
                style="@style/text_black_14_w_w"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:text="查看"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10">

    </View>

    <!--手机号-->

    <LinearLayout
        android:id="@+id/ll_set_phone_number"
        style="@style/hh_fi_wr"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical">


        <TextView
            style="@style/text_black_14_w_w"
            android:text="手机号" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/tv_phone_number"
                style="@style/text_gray_12_f_w"
                android:layout_weight="0.8"
                android:text="4114211996****1221" />


            <TextView
                style="@style/text_black_14_w_w"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_10"
                android:text="更换" />


        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10">

    </View>


    <!--修改账号密码-->


    <LinearLayout
        android:id="@+id/ll_set_pwd"
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15">

        <TextView
            style="@style/text_black_14_f_w"
            android:drawableRight="@drawable/right_arrow"
            android:text="修改账号密码" />


    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10">

    </View>


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_exit"
        style="@style/text_white_16_w_w"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="切换账号"
        android:visibility="gone"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />


</LinearLayout>