<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        style="@style/hh_fi_wr"
        android:padding="@dimen/dp_10">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_head"
            app:qmui_border_width="0dp"
            app:qmui_is_circle="true" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="0.8"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_hospital_name"
                style="@style/text_black_14_f_w"
                android:layout_marginTop="@dimen/dp_5"
                android:text="北京大学医院" />

            <TextView
                android:id="@+id/tv_hospital_part"
                style="@style/text_gray_12_f_w"
                android:layout_marginTop="@dimen/dp_5"
                android:text="内分泌科室" />

        </LinearLayout>

        <com.wei.android.lib.colorview.view.ColorTextView
            android:id="@+id/tv_look"
            style="@style/text_white_14_w_w"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_4"
            android:text="查看"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="90dp" />

    </LinearLayout>

    <LinearLayout
        style="@style/hh_fi_wr"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_person_name"
            style="@style/text_black_14_f_w"
            android:layout_weight="0.8"
            android:text="张三" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_gray_14_w_w"
            android:text="时间" />


    </LinearLayout>


    <View style="@style/line" />

</LinearLayout>