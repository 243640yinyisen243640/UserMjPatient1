<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/line" />

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hl_shadowColor="#1c000000"
        app:hl_shadowOffsetX="1dp"
        app:hl_shadowOffsetY="1dp">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="22dp"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="22dp">

            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/iv_head"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_head"
                app:qmui_border_width="0dp"
                app:qmui_is_circle="true" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_doctor_name"
                    style="@style/text_black_16_w_w"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="医生姓名" />


                <TextView
                    android:id="@+id/tv_department_name"
                    style="@style/text_gray_12_w_w"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="科室名称" />

                <TextView
                    android:id="@+id/tv_doctor_type"
                    style="@style/text_gray_12_w_w"
                    android:text="主任医师" />


            </LinearLayout>


            <com.wei.android.lib.colorview.view.ColorTextView
                android:id="@+id/tv_un_bind"
                style="@style/text_black_14_w_w"
                android:layout_gravity="center"
                android:paddingLeft="17dp"
                android:paddingTop="9dp"
                android:paddingRight="17dp"
                android:paddingBottom="9dp"
                android:text="解绑"
                app:borderColorNormal="@color/black_text"
                app:borderWidthNormal="1dp"
                app:cornerRadiusNormal="@dimen/dp_4" />

        </LinearLayout>
    </com.lihang.ShadowLayout>


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <View
            style="@style/line"
            android:layout_width="3dp"
            android:layout_height="@dimen/dp_15"
            android:background="@color/main_home" />


        <TextView
            style="@style/text_black_14_w_w"
            android:padding="5dp"
            android:text="医生简介" />

    </LinearLayout>

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <View
            style="@style/line"
            android:layout_width="3dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@color/main_home"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/tv_doctor_desc"
            style="@style/text_gray_14_w_w"
            android:lineSpacingMultiplier="1.2"
            android:text="医生简介" />

    </LinearLayout>
</LinearLayout>