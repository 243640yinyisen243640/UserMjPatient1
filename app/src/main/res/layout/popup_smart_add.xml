<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/smart_add_popup_bg">

        <ImageView
            android:id="@+id/img_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/smart_add_popup_x" />

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/smart_add_popup_exclamation_mark" />

            <TextView
                style="@style/text_black_14_w_w"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="未找到设备"
                android:textSize="@dimen/sp_20" />

            <TextView
                style="@style/text_black_14_w_w"
                android:layout_gravity="center"
                android:text="请检查设备连接"
                android:textSize="@dimen/sp_20" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_look"
            style="@style/text_black_14_w_w"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="返回查看"
            android:textColor="@color/management_text"
            android:textSize="@dimen/sp_20" />

    </FrameLayout>


</LinearLayout>