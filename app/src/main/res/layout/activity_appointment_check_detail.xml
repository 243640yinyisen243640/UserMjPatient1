<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--预约信息-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10">

                <View
                    style="@style/line"
                    android:layout_width="2dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:background="@color/main_home" />


                <TextView
                    style="@style/text_black_16_w_w"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="预约信息" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_hospital_name"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="7dp"
                android:text="医院名称" />


            <TextView
                android:id="@+id/tv_hospital_department"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:text="科室名称" />

            <TextView
                android:id="@+id/tv_doctor_name"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:text="医生名称" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:text="日期" />

        </LinearLayout>

        <!--时间选择-->
        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10">

                <View
                    style="@style/line"
                    android:layout_width="2dp"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:background="@color/main_home" />


                <TextView
                    style="@style/text_black_16_w_w"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="时间选择" />


            </LinearLayout>


            <!--时间-->
            <LinearLayout
                android:id="@+id/ll_time_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="28dp">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="时间段:" />


                <TextView
                    android:id="@+id/tv_time_select"
                    style="@style/text_black_14_f_w"
                    android:drawableRight="@drawable/right_arrow_green"
                    android:hint="请选择就诊时间"
                    android:textColor="@color/gray_text" />


            </LinearLayout>

            <!--就诊人-->

            <LinearLayout
                android:id="@+id/ll_people_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="28dp">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="就诊人:" />


                <TextView
                    android:id="@+id/tv_people_select"
                    style="@style/text_black_14_f_w"
                    android:drawableRight="@drawable/right_arrow_green"
                    android:hint="请添加就诊人"
                    android:textColor="@color/gray_text" />


            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="18dp" />
        </LinearLayout>


        <!--到院支付-->

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="vertical">

            <LinearLayout style="@style/hh_fi_wr">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/appointment_check_money" />


                <TextView
                    style="@style/text_black_16_f_w"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.8"
                    android:text="到院支付"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_money"
                    style="@style/text_black_16_w_w"
                    android:text="挂号费：￥0.00"
                    android:textColor="@color/main_home" />


            </LinearLayout>


            <TextView
                style="@style/text_black_12_w_w"
                android:layout_marginTop="@dimen/dp_6"
                android:text="(挂号费在取号时收取，以医院实际收费为准)"
                android:textColor="@color/main_home" />


            <TextView
                style="@style/text_black_12_w_w"
                android:layout_marginTop="@dimen/dp_6"
                android:text="注:"
                android:textColor="@color/main_home" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:layout_marginTop="3dp"
                android:text="退号时间：最迟预约就诊日期前一天下午6：00前可退号预约" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:layout_marginTop="1dp"
                android:text="规则:&#8195;1.每天相同科室仅可预约两次。" />

            <TextView
                style="@style/text_gray_12_w_w"
                android:layout_marginTop="1dp"
                android:text="&#8195;&#8195;&#8195;&#160;2.若预约成功但当日不取号者，视为违约，如连续三次违约的患者，您将在随后2个月内不能享受我院的预约服务。" />
        </LinearLayout>


    </LinearLayout>


    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_check"
        style="@style/text_white_16_f_w"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="预约挂号"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="@dimen/dp_5">

    </com.wei.android.lib.colorview.view.ColorTextView>


</RelativeLayout>

