<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_examine"
    style="@style/ll_follow_up_visit_include_item">

    <!--辅助检查-->

    <LinearLayout
        style="@style/hh_wr_wr"
        android:layout_marginLeft="@dimen/dp_12">


        <com.wei.android.lib.colorview.view.ColorView
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="1dp">

        </com.wei.android.lib.colorview.view.ColorView>


        <TextView
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="辅助检查"
            android:textColor="@color/main_home" />


    </LinearLayout>


    <!--空腹血糖值-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="空腹血糖值" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout style="@style/hh_wr_wr">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_empty_sugar"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="mmol/L" />


        </LinearLayout>


    </LinearLayout>


    <!--糖化血红蛋白-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="糖化血红蛋白" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout style="@style/hh_wr_wr">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_blood_red"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="%" />


        </LinearLayout>


    </LinearLayout>

    <!--检查日期-->


    <LinearLayout
        android:id="@+id/ll_select_time"
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="检查日期" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_check_time"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:hint="请选择日期" />


    </LinearLayout>


</LinearLayout>