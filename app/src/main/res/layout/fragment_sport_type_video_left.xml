<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        style="@style/scrollView"
        android:layout_above="@+id/bt_begin_exercise">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_bg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_bg_taiji" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_margin="@dimen/dp_18"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sport_type"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="跳绳"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/tv_sport_time"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="时长：00:00:00"
                    android:textColor="#343434" />

                <TextView
                    android:id="@+id/tv_sport_kcal"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="1"
                    android:text="消耗:54千卡"
                    android:textColor="#343434" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_sport_desc"
                style="@style/text_black_14_f_w"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:lineSpacingMultiplier="1.2"
                android:text="太极拳运动的特点，是静中之动，虽动犹静。动所以活气血，静所以养脑力。动静结合，身心皆练，内外一体，刚柔相济，所以同时能充分发挥医疗体育的作用。现代医学研究表明，太极拳和一般的健身体操不同，除去全身各个肌肉群、关节需要活动外，还要配合均匀的深呼吸与横膈运动，而更重要的是需要精神的专注，心静、用意，这样就对中枢神经系统起了良好的影响，从而给其他系统与器官的活动和改善打下了良好的基础。"
                android:textColor="#343434" />

            <TextView
                android:id="@+id/tv_sport_warning"
                style="@style/text_black_14_w_w"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:lineSpacingMultiplier="1.2"
                android:text="标准深蹲是非常好是练大腿肌肉的王牌动作，坚持做还会起到减肥的作用。深蹲被认为是增强腿部和臀部力量和围度，以及发展核心力量必不可少的练习。"
                android:textColor="#343434" />

        </LinearLayout>
    </ScrollView>


    <com.wei.android.lib.colorview.view.ColorButton
        android:id="@+id/bt_begin_exercise"
        style="@style/text_white_16_w_w"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:text="开始运动"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="90dp" />


</RelativeLayout>