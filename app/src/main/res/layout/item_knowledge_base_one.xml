<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_medicine"
            app:qmui_border_color="@color/color_f2"
            app:qmui_border_width="1dp"
            app:qmui_corner_radius="5dp" />


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_know_title"
                style="@style/text_black_16_w_w"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="大标题" />

            <TextView
                android:id="@+id/tv_little_title"
                style="@style/text_gray_14_f_w"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="" />


            <LinearLayout
                style="@style/hh_wr_wr"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_eye"
                    android:layout_width="20dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/eyes" />

                <TextView
                    android:id="@+id/tv_look_count"
                    style="@style/text_white_12_w_w"
                    android:layout_gravity="center_vertical"
                    android:text="100"
                    android:textColor="@color/color_a3" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10" />

</LinearLayout>