<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_physical_sign"
    style="@style/ll_follow_up_visit_include_item">
    <!--体征-->

    <LinearLayout
        style="@style/hh_wr_wr"
        android:layout_marginLeft="@dimen/dp_12">

        <com.wei.android.lib.colorview.view.ColorView
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="1dp">

        </com.wei.android.lib.colorview.view.ColorView>

        <TextView
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="体征"
            android:textColor="@color/main_home" />


    </LinearLayout>

    <!--血压-->
    <RelativeLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            android:id="@+id/ll_get_blood_pressure"
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="血压" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/ll_get_blood_pressure">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_weight="1">

                <com.wei.android.lib.colorview.view.ColorEditText
                    android:id="@+id/et_physical_sign_high"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:hint="收缩压"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/sp_14"
                    app:borderColorNormal="@color/gray_text"
                    app:borderWidthNormal="1dp" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:layout_marginLeft="6dp"
                    android:text="mmHg" />


            </LinearLayout>

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_weight="1">

                <com.wei.android.lib.colorview.view.ColorEditText
                    android:id="@+id/et_physical_sign_low"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:hint="舒张压"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/sp_14"
                    app:borderColorNormal="@color/gray_text"
                    app:borderWidthNormal="1dp" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:layout_marginLeft="6dp"
                    android:text="mmHg" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <!--身高-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="身高" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginLeft="@dimen/dp_30">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_height"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="cm" />


        </LinearLayout>


    </LinearLayout>
    <!--体重-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="体重" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginLeft="@dimen/dp_30">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_weight"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="kg" />


        </LinearLayout>


    </LinearLayout>

    <!--体脂指数-->


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="体质指数" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_bmi"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:hint="--- BMI" />


    </LinearLayout>


    <!--心率-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="心率" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginLeft="@dimen/dp_30">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_bpm"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_6"
                android:text="bpm" />


        </LinearLayout>


    </LinearLayout>


    <!--其它-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="其它" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginLeft="@dimen/dp_30">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_physical_other"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="kg"
                android:visibility="invisible" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>