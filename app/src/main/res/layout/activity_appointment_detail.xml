<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--预约状态页-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_height="160dp"
        android:background="@color/main_home"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/appoint_success" />


        <TextView
            android:id="@+id/tv_state"
            style="@style/text_white_12_w_w"
            android:layout_marginTop="@dimen/dp_10"
            android:text="预约成功"
            android:textSize="18sp" />


    </LinearLayout>
    <!--预约信息-->
    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_12"
        android:orientation="vertical">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <View
                style="@style/line"
                android:layout_width="2dp"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@color/main_home" />


            <TextView
                style="@style/text_black_16_w_w"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="预约信息" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_hospital_name"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:text="医院名称" />


        <TextView
            android:id="@+id/tv_hospital_department"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="科室名称" />

        <TextView
            android:id="@+id/tv_doctor_name"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="医生名称" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="日期" />

        <TextView
            android:id="@+id/tv_patient_name"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="就诊人" />

        <TextView
            android:id="@+id/tv_id_number"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="身份证号" />
    </LinearLayout>


    <!--订单信息-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_12"
        android:orientation="vertical">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <View
                style="@style/line"
                android:layout_width="2dp"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@color/main_home" />


            <TextView
                style="@style/text_black_16_w_w"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="订单信息" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_appoint_number"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:text="预约编号" />


        <TextView
            android:id="@+id/tv_order_time"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="下单时间" />

        <TextView
            android:id="@+id/tv_pay_way"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="支付方式：到院支付" />

        <TextView
            android:id="@+id/tv_registration_fee"
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:text="挂号费：0.00元" />


    </LinearLayout>


    <!--就医提醒-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_12"
        android:orientation="vertical">

        <LinearLayout style="@style/hh_fi_wr">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/appoint_remind" />


            <TextView
                style="@style/text_gray_12_f_w"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="就医提醒" />


        </LinearLayout>


        <LinearLayout style="@style/hh_fi_wr">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/appoint_remind"
                android:visibility="invisible" />


            <TextView
                style="@style/text_gray_12_f_w"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="请携带身份证、就诊卡、社保卡到医院取号" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>