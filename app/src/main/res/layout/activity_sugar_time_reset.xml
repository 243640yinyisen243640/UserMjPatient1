<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/header_sugar_time_reset" />

    <!--空腹-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="空腹" />


        <TextView
            android:id="@+id/tv_one_left"
            style="@style/tv_sugar_time_reset"
            android:text="05:01" />

        <TextView
            android:id="@+id/tv_one_right"
            style="@style/tv_sugar_time_reset"
            android:text="08:00" />

    </LinearLayout>

    <View style="@style/line" />

    <!--早餐后-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="早餐后" />


        <TextView
            android:id="@+id/tv_two_left"
            style="@style/tv_sugar_time_reset"
            android:text="08:01" />

        <TextView
            android:id="@+id/tv_two_right"
            style="@style/tv_sugar_time_reset"
            android:text="10:00" />

    </LinearLayout>

    <View style="@style/line" />
    <!--午餐前-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="午餐前" />


        <TextView
            android:id="@+id/tv_three_left"
            style="@style/tv_sugar_time_reset"
            android:text="10:01" />

        <TextView
            android:id="@+id/tv_three_right"
            style="@style/tv_sugar_time_reset"
            android:text="12:00" />

    </LinearLayout>

    <View style="@style/line" />


    <!--午餐后-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="午餐后" />


        <TextView
            android:id="@+id/tv_four_left"
            style="@style/tv_sugar_time_reset"
            android:text="12:01" />

        <TextView
            android:id="@+id/tv_four_right"
            style="@style/tv_sugar_time_reset"
            android:text="15:00" />

    </LinearLayout>

    <View style="@style/line" />


    <!--晚餐前-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="晚餐前" />


        <TextView
            android:id="@+id/tv_five_left"
            style="@style/tv_sugar_time_reset"
            android:text="15:01" />

        <TextView
            android:id="@+id/tv_five_right"
            style="@style/tv_sugar_time_reset"
            android:text="18:00" />

    </LinearLayout>

    <View style="@style/line" />


    <!--晚餐后-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="晚餐后" />


        <TextView
            android:id="@+id/tv_six_left"
            style="@style/tv_sugar_time_reset"
            android:text="18:01" />

        <TextView
            android:id="@+id/tv_six_right"
            style="@style/tv_sugar_time_reset"
            android:text="21:00" />

    </LinearLayout>

    <View style="@style/line" />
    <!--睡前-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="睡前" />


        <TextView
            android:id="@+id/tv_seven_left"
            style="@style/tv_sugar_time_reset"
            android:text="21:01" />

        <TextView
            android:id="@+id/tv_seven_right"
            style="@style/tv_sugar_time_reset"
            android:text="23:59" />

    </LinearLayout>

    <View style="@style/line" />
    <!--凌晨-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_16">

        <TextView
            style="@style/tv_sugar_time_reset"
            android:text="凌晨" />


        <TextView
            android:id="@+id/tv_eight_left"
            style="@style/tv_sugar_time_reset"
            android:text="00:00" />

        <TextView
            android:id="@+id/tv_eight_right"
            style="@style/tv_sugar_time_reset"
            android:text="05:00" />

    </LinearLayout>

    <View style="@style/line" />

</LinearLayout>