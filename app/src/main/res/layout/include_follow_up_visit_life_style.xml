<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_life_style"
    style="@style/ll_follow_up_visit_include_item">

    <!--生活方式-->

    <LinearLayout
        style="@style/hh_wr_wr"
        android:layout_marginLeft="@dimen/dp_12">

        <com.wei.android.lib.colorview.view.ColorView
            android:layout_width="2dp"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center"
            app:backgroundColorNormal="@color/main_home"
            app:cornerRadiusNormal="1dp">

        </com.wei.android.lib.colorview.view.ColorView>

        <TextView
            style="@style/text_black_14_w_w"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="生活方式"
            android:textColor="@color/main_home" />

    </LinearLayout>


    <!--日吸烟量-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="日吸烟量" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout style="@style/hh_wr_wr">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_smoke"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:hint=""
                android:inputType="number"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="支" />


        </LinearLayout>


    </LinearLayout>


    <!--日饮酒量-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="日饮酒量" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout style="@style/hh_wr_wr">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_drink"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:hint=""
                android:inputType="number"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="两" />


        </LinearLayout>


    </LinearLayout>

    <!--运动次数 运动时长-->

    <LinearLayout style="@style/hh_fi_wr">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <LinearLayout
                style="@style/hh_wr_wr"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="运动次数" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="*"
                    android:textColor="@color/main_home" />


            </LinearLayout>


            <LinearLayout style="@style/hh_wr_wr">

                <com.wei.android.lib.colorview.view.ColorEditText
                    android:id="@+id/et_sport_count"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/sp_14"
                    app:borderColorNormal="@color/gray_text"
                    app:borderWidthNormal="1dp" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:text="次/周" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <LinearLayout
                style="@style/hh_wr_wr"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="运动时长" />

                <TextView
                    style="@style/text_black_14_w_w"
                    android:text="*"
                    android:textColor="@color/main_home" />


            </LinearLayout>


            <LinearLayout style="@style/hh_wr_wr">

                <com.wei.android.lib.colorview.view.ColorEditText
                    android:id="@+id/et_sport_time"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_6"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="2dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="2dp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/gray_text"
                    android:textSize="@dimen/sp_14"
                    app:borderColorNormal="@color/gray_text"
                    app:borderWidthNormal="1dp" />

                <TextView
                    style="@style/text_gray_14_w_w"
                    android:text="分/次" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <!--主食-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">

        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="主食" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <LinearLayout style="@style/hh_wr_wr">

            <com.wei.android.lib.colorview.view.ColorEditText
                android:id="@+id/et_main_food"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:hint=""
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="2dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="2dp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/gray_text"
                android:textSize="@dimen/sp_14"
                app:borderColorNormal="@color/gray_text"
                app:borderWidthNormal="1dp" />

            <TextView
                style="@style/text_gray_14_w_w"
                android:text="克/天" />


        </LinearLayout>


    </LinearLayout>


    <!--心理调整-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="心理调整" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <RadioGroup
            android:id="@+id/rg_life_style_psychological_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_psychological_adjust_well"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="良好" />


            <RadioButton
                android:id="@+id/rb_psychological_adjust_common"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="一般" />

            <RadioButton
                android:id="@+id/rb_psychological_adjust_bad"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="差" />


        </RadioGroup>

    </LinearLayout>
    <!--遵医调整-->

    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12">


        <LinearLayout
            style="@style/hh_wr_wr"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                style="@style/text_black_14_w_w"
                android:text="遵医行为" />

            <TextView
                style="@style/text_black_14_w_w"
                android:text="*"
                android:textColor="@color/main_home" />


        </LinearLayout>


        <RadioGroup
            android:id="@+id/rg_life_style_follow_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rb_follow_doctor_well"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="良好" />


            <RadioButton
                android:id="@+id/rb_follow_doctor_common"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="一般" />

            <RadioButton
                android:id="@+id/rb_follow_doctor_bad"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:text="差" />

        </RadioGroup>

    </LinearLayout>


</LinearLayout>