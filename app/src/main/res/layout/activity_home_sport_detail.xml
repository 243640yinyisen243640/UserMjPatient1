<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="26dp"
    android:paddingRight="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_state_text"
        style="@style/text_black_14_w_w"
        android:text="非常好"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_state_text_desc"
        style="@style/text_gray_14_w_w"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="经测评您今天的成绩非常好！" />


    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_undone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_detail_state_undone_uncheck" />
        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_detail_state_good_uncheck" />
        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/sport_detail_state_over_checked" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        style="@style/hh_fi_wr"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_line_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sport_detail_line_uncheck" />
            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />
        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_line_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sport_detail_line_uncheck" />
            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />
        </LinearLayout>

        <LinearLayout
            style="@style/hh_fi_wr"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_line_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sport_detail_line_checked" />
            </LinearLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="3"
                android:background="@drawable/line_stroke"
                android:layerType="software" />
        </LinearLayout>


    </LinearLayout>


    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:padding="20dp"
        app:hl_cornerRadius="@dimen/dp_18"
        app:hl_shadowColor="#000000"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="0dp"
        app:hl_strokeColor="#F2F2F2"
        app:hl_strokeWith="1dp">


        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">


            <LinearLayout
                style="@style/hh_fi_wr"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sport_detail_type_bike" />


                <LinearLayout
                    style="@style/hh_fi_wr"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_sport_detail_text"
                        style="@style/text_black_14_w_w"
                        android:text="走路 深蹲"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_sport_detail_time"
                        style="@style/text_black_14_w_w"
                        android:layout_marginTop="@dimen/dp_12"
                        android:text="2020.07.08"
                        android:textColor="@color/main_home" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_sport_detail_desc"
                style="@style/text_gray_14_w_w"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.2"
                android:text="非常好！您完成了今日的运动计划，请继续保持哦！坚持规律运动8周以上可以使糖化血红蛋白降低0.66%，坚持12～14年可以有效降低病死率。" />

        </LinearLayout>


    </com.lihang.ShadowLayout>


</LinearLayout>