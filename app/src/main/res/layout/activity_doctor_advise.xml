<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.homesign.DoctorAdviceActivity">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_advice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:listitem="@layout/item_doctor_advise" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <com.wei.android.lib.colorview.view.ColorTextView
        android:id="@+id/tv_ask"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="12.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="12.5dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:text="咨询医生"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="@dimen/size_18"
        app:backgroundColorNormal="@color/main_home"
        app:cornerRadiusNormal="@dimen/dp_5" />

</LinearLayout>