<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        style="@style/hh_fi_wr"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_time"
            style="@style/text_black_14_f_w"
            android:text="7月28日"
            android:textColor="@color/color_666" />


        <TextView
            android:id="@+id/tv_total_kcal"
            style="@style/text_black_14_f_w"
            android:layout_marginTop="@dimen/dp_18"
            android:drawableLeft="@drawable/home_diet_kj"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="总消耗 1000千卡" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sport_type_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            tools:listitem="@layout/item_child_home_sport_list">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10" />
</LinearLayout>