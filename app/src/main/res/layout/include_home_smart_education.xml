<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/hh_fi_wr"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/ll_guide"
            style="@style/hh_wr_wr"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/green_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="专属课堂"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_relate_to_me"
            style="@style/text_black_14_w_w"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/home_smart_education_arrow_right"
            android:drawablePadding="@dimen/dp_5"
            android:text="与您相关"
            android:textColor="@color/main_home" />


    </RelativeLayout>


    <com.lihang.ShadowLayout
        android:id="@+id/fl_home_education_have"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone"
        app:hl_cornerRadius="@dimen/dp_12"
        app:hl_shadowColor="@color/home_smart_education_color"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="0dp"
        app:hl_strokeColor="#F2F2F2"
        app:hl_strokeWith="1dp">

        <FrameLayout
            android:id="@+id/fl_home_smart_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_home_smart_education_bank_name"
                    style="@style/text_black_14_w_w"
                    android:text="糖尿病系列二" />

                <TextView
                    android:id="@+id/tv_home_smart_education_class_name"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="第一节：适合糖尿病患者的运动方式有哪些？" />

                <TextView
                    android:id="@+id/tv_home_smart_education_class_detail"
                    style="@style/text_gray_14_w_w"
                    android:layout_marginTop="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="成年2型糖尿病患者每周至少150分钟内容内容内容内容内容内容…" />

            </LinearLayout>


            <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                android:id="@+id/img_home_smart_education_bank_pic"
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="-15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_medicine"
                app:qmui_border_width="0dp"
                app:qmui_corner_radius="10dp" />


            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="135dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_home_smart_education_look_time"
                    style="@style/text_black_14_f_w"
                    android:layout_weight="0.8"
                    android:text="本节共1632字,阅读时间约5分钟" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/yellow_back"
                    android:gravity="center"
                    android:text="查看"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>


    </com.lihang.ShadowLayout>


    <!--阴影布局-->
    <com.lihang.ShadowLayout
        android:id="@+id/fl_home_education_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:visibility="visible"
        app:hl_cornerRadius="@dimen/dp_18"
        app:hl_shadowColor="#000000"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="0dp"
        app:hl_strokeColor="#F2F2F2"
        app:hl_strokeWith="1dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_25"
            android:scaleType="fitXY"
            android:src="@drawable/home_smart_education_30038" />
    </com.lihang.ShadowLayout>



</LinearLayout>


