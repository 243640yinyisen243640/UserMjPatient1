<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.homesign.FamilyDoctorBindActivity">

    <View
        style="@style/line"
        android:layout_height="3dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_one"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_hospitalization_appointment"
            android:text="预约住院" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_follow_up_manage"
            android:text="随访管理" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_three"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_inspection_data"
            android:text="检验数据" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_family_member"
            android:text="家庭成员" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_five"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_doctor_advice"
            android:text="医生建议" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_six"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_consult_doctor"
            android:text="咨询医生" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp" />

    <LinearLayout style="@style/hh_fi_wr">

        <TextView
            android:id="@+id/tv_seven"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_service_pack"
            android:text="服务包" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <TextView
            android:id="@+id/tv_eight"
            style="@style/family_doctor_main"
            android:drawableStart="@drawable/ic_signing_protocol"
            android:text="签约协议" />

    </LinearLayout>

</LinearLayout>