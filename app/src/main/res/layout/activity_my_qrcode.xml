<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/line" />

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        app:hl_cornerRadius="@dimen/dp_12"
        app:hl_strokeColor="#F2F2F2"
        app:hl_strokeWith="1dp">

        <LinearLayout
            style="@style/hh_fi_wr"
            android:orientation="vertical">

            <LinearLayout
                style="@style/hh_fi_wr"
                android:layout_margin="@dimen/dp_16">

                <com.qmuiteam.qmui.widget.QMUIRadiusImageView
                    android:id="@+id/img_head"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_qr_code_head_img"
                    app:qmui_border_width="@dimen/dp_0"
                    app:qmui_corner_radius="@dimen/dp_5" />


                <LinearLayout
                    style="@style/hh_fi_wr"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/hh_fi_wr"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            style="@style/text_black_16_w_w"
                            android:layout_marginRight="@dimen/dp_8"
                            android:text="张三" />

                        <ImageView
                            android:id="@+id/img_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/my_qrcode_sex_male" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_tel"
                        style="@style/text_gray_14_w_w"
                        android:layout_marginTop="8dp"
                        android:text="13213071373" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_qr_code"
                android:layout_width="262dp"
                android:layout_height="262dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="32dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </com.lihang.ShadowLayout>


</RelativeLayout>