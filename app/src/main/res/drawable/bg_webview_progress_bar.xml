<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/color_e5"
                android:endColor="@color/color_e5"
                android:startColor="@color/color_e5" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dp" />
                <gradient
                    android:centerColor="@color/webview_progress"
                    android:endColor="@color/webview_progress"
                    android:startColor="@color/webview_progress" />

            </shape>
        </clip>
    </item>

</layer-list>