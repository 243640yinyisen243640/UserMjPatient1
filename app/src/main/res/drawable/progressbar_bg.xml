<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--background-->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:endColor="@color/color_eb"
                android:startColor="@color/color_eb" />
        </shape>
    </item>

    <!--progressDrawable-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:endColor="@color/main_home"
                    android:startColor="@color/main_home" />
            </shape>
        </clip>
    </item>
</layer-list>